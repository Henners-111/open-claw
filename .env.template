# /opt/openclaw/.env.template
# Copy to /opt/openclaw/.env and set real values. Then run: chmod 600 /opt/openclaw/.env

# Gateway auth token (generate locally with: openssl rand -hex 64)
OPENCLAW_GATEWAY_TOKEN=<PASTE_GATEWAY_TOKEN_HERE>

# Telegram Bot
TELEGRAM_BOT_TOKEN=<PASTE_TELEGRAM_BOT_TOKEN_HERE>
TELEGRAM_CHAT_ID=<YOUR_TELEGRAM_CHAT_ID>

# Google API
GOOGLE_CREDENTIALS_PATH=/opt/openclaw/config/google-credentials.json
GOOGLE_TOKEN_PATH=/opt/openclaw/config/google-token.json
GMAIL_ADDRESS=<YOUR_GMAIL_ADDRESS>

# Ollama config
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=gpt-oss:20b-cloud

# Calendars
GOOGLE_CALENDAR_WORK=<WORK_CALENDAR_ID>
GOOGLE_CALENDAR_PERSONAL=<PERSONAL_CALENDAR_ID>
ETON_CALENDAR_URL=<ETON_PUPILS_CALENDAR_ICS_URL>

# Monitoring
HEARTBEAT_INTERVAL_HOURS=6
ALERT_THRESHOLD_MINUTES=5

# Misc
WEATHER_LOCATION=London
NODE_ENV=production
